<%= form_with(model: todo_list, class: "contents w-full") do |form| %>
  <% if todo_list.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(todo_list.errors.count, "error") %> prohibited this todo_list from being saved:</h2>

      <ul>
        <% todo_list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="w-full flex justify-between">
    <div class="inline-block">
      <%= form.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="inline-block">
      <%= form.submit class: "#{LinkComponent::BUTTON_CLASS} bg-green-900" %>
      <% if action_name.in? %w(edit update) %>
        <%= link 'Cancel', todo_list, type: :secondary %>
      <% end %>
    </div>
  </div>
<% end %>
