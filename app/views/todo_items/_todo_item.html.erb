<li id="<%= dom_id todo_item %>">
  <span class="inline-block">
    <%= form_with(model: [todo_item.todo_list, todo_item], data: { controller: 'form' }) do |f| %>
      <%= f.check_box :done, class: 'focus:ring-0', data: { action: 'form#submit' } %>
    <% end %>
  </span>
  <span class="<%= 'font-bold' if todo_item.done? %>">
    <%= todo_item.description %>
  </span>
  <%= link_to 'Edit', edit_todo_list_todo_item_path(todo_item.todo_list, todo_item), 'data-turbo-stream': true, class: 'ml-4 text-sm text-blue-800' %>
  <%= link_to 'Destroy', todo_list_todo_item_path(todo_item.todo_list, todo_item), 'data-turbo-method': 'delete', class: 'text-sm text-red-800' %>
</li>
